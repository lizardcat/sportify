<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="12dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="6dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="@color/colorCardBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Workout Date -->
        <TextView
            android:id="@+id/tvWorkoutDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025-04-09"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorCardText" />

        <!-- Workout Type Tag -->
        <TextView
            android:id="@+id/tvWorkoutType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Strength"
            android:textSize="12sp"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginTop="6dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:background="@drawable/activity_tag_background_red"
            android:textStyle="bold" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#DDDDDD" />

        <!-- Workout Summary -->
        <TextView
            android:id="@+id/tvWorkoutSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 sets x 5 reps @ 80kg"
            android:textSize="14sp"
            android:textColor="@color/colorCardText"
            android:layout_marginTop="10dp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
