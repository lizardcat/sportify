<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Optional Plan/Day Title -->
        <TextView
            android:id="@+id/tvSummaryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workout Summary"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Duration -->
        <TextView
            android:id="@+id/tvSummaryDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⏱️ Duration: 0 mins"
            android:textColor="#BBBBBB"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Calories -->
        <TextView
            android:id="@+id/tvSummaryCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🔥 Calories Burned: 0 kcal"
            android:textColor="#BBBBBB"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Notes -->
        <TextView
            android:id="@+id/tvSummaryNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📝 Notes: N/A"
            android:textColor="#DDDDDD"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Exercise Summary -->
        <TextView
            android:id="@+id/tvSummaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✓ Exercise Summary"
            android:textColor="#DDDDDD"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- Done Button -->
        <Button
            android:id="@+id/btnDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Done"
            android:backgroundTint="#1E88E5"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
