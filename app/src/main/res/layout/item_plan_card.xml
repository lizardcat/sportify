<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginHorizontal="8dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="8dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="#1E1E1E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Thumbnail -->
        <ImageView
            android:id="@+id/imgPlanImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:contentDescription="Plan image" />

        <!-- Text and button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#1E1E1E">

            <TextView
                android:id="@+id/tvPlanTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plan Title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvPlanDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This plan helps you build strength and power."
                android:textSize="14sp"
                android:textColor="#CCCCCC"
                android:layout_marginTop="4dp" />

            <Button
                android:id="@+id/btnStartNow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Start Now"
                android:textColor="@android:color/white"
                android:backgroundTint="#1E88E5"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
