<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Timer Display -->
        <TextView
            android:id="@+id/tvWorkoutTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Pause/Resume Button -->
        <Button
            android:id="@+id/btnPauseResume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pause"
            android:backgroundTint="#FF9800"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <!-- Dynamic Exercise Set Container -->
        <LinearLayout
            android:id="@+id/setContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp" />

        <EditText
            android:id="@+id/editNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Notes about this workout (optional)"
            android:backgroundTint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:maxLines="4"
            android:layout_marginBottom="20dp" />

        <!-- Finish Button -->
        <Button
            android:id="@+id/btnFinishWorkout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Finish Workout"
            android:backgroundTint="#43A047"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
</ScrollView>
